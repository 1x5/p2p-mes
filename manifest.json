{
  "manifest_version": 3,
  "name": "P2P Messenger",
  "version": "1.0.0",
  "description": "Минималистичный P2P мессенджер для двоих",
  "permissions": [
    "storage",
    "offscreen"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

